{
  "manifest_version": 3,
  "name": "Password Manager Front End",
  "version": "1.0.0",
  "description": "A secure password manager extension",
  
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "icon-48.png"
    }
  },

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "http://localhost:8080/*",
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "48": "icon-48.png"
  }
}
