{
  "manifest_version": 3,
  "name": "Password Manager",
  "version": "1.0.0",
  "description": "A secure password manager extension",
  
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "icon-48.png"
    }
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "host_permissions": [
    "http://localhost:8080/*"
  ]
}
